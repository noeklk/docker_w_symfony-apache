{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>PrixHT</th>
                <td>{{ article.prixHT }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('voir_liste_article') }}">Voir la liste des articles</a>
{% endblock %}
